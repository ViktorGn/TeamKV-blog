<form class="form-horizontal" method="POST" action="/article/delete/{{article.id}}">
    <fieldset>
        <div class="form-group" style="margin-top: 30px;">
            <label class="col-sm-4 control-label" style="width: 15%" for="articleTitle">Заглавие на обявата</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="articleTitle" placeholder="Заглавие" value="{{article.title}}" name="title" maxlength="50" disabled>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label" style="width: 15%" for="articleContent">Description</label>
            <div class="col-sm-6">
                <textarea class="form-control" style="resize: none" id="articleContent" rows="10" name="content" disabled>{{article.content}}</textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-4 col-sm-offset-9">
                <a href="/" class="btn btn-default" style="margin-left: -20px">Назад</a>
                <button type="submit" href="/article/edit/{{article.id}}" class="btn btn-danger" style="margin-left: 10px">Изтрий обявата</button>
            </div>
        </div>
    </fieldset>
</form>